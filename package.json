{
  "name": "lirbank.com",
  "type": "module",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "bun test && prettier --check . && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "test": "bun test",
    "icons": "bun scripts/generate-icons.ts",
    "clean:soft": "rm -rf node_modules tsconfig.tsbuildinfo .astro dist && bun install",
    "clean:hard": "rm -rf node_modules tsconfig.tsbuildinfo .astro dist bun.lock && bun install",
    "infra:check": "bun infra/check.ts",
    "chrome:dev": "bun build ./chrome/background.ts --outdir ./chrome --watch",
    "chrome:build": "bun build ./chrome/background.ts --outdir ./chrome"
  },
  "dependencies": {
    "@iconify-json/fa6-brands": "^1.2.6",
    "@iconify-json/fa6-solid": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.6",
    "astro-icon": "^1.1.5",
    "onedollarstats": "^0.0.11",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/chrome": "^0.1.32",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3"
  }
}
