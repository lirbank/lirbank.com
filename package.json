{
  "name": "lirbank.com",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prettier --check . && eslint --max-warnings 0 && next build",
    "start": "next start",
    "format": "prettier --write .",
    "lint": "eslint --fix",
    "clean:soft": "rm -rf node_modules tsconfig.tsbuildinfo .next && bun install",
    "clean:hard": "rm -rf node_modules tsconfig.tsbuildinfo .next bun.lock && bun install",
    "chrome:dev": "bun build ./chrome/background.ts --outdir ./chrome --watch",
    "chrome:build": "bun build ./chrome/background.ts --outdir ./chrome"
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "^13.8.0",
    "@vercel/analytics": "^1.5.0",
    "next": "^16.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/chrome": "^0.1.27",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.39.0",
    "eslint-config-next": "^16.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
