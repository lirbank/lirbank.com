{
  "manifest_version": 3,
  "name": "Copy Text & URL",
  "version": "1.0",
  "description": "Copy specified text and URL to clipboard using a keyboard shortcut.",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Copy specified text and URL"
    }
  },
  "action": {
    "default_title": "Copy Text & URL"
  }
}
